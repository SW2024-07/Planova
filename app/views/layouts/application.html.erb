<!DOCTYPE html>
<html>
  <head>
    <title>カレンダー共有アプリ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbo-track': 'reload' %>
  </head>
  <body>
    
    <header>
      <div class="header-container">
        <a href="<%= root_path %>" class="site-name">カレンダー共有アプリ</a>
        <nav class="header-nav">
          <% if session[:user_id] %>
            <%= link_to 'マイページ', user_path(session[:user_id]), class: 'nav-link' %>
            <%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link' %>
          <% else %>
            <%= link_to '新規登録', new_user_path, class: 'nav-link' %>
            <%= link_to 'ログイン', login_path, class: 'nav-link' %>
          <% end %>
        </nav>
      </div>
    </header>

    <main>
      <%= yield %>
    </main>
    
  </body>
</html>
